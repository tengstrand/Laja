package {behaviour.packagename};

import java.util.*;
    #importsBegin()
    #importsList()
    #importsEnd()
    #class()
#end

#if (behaviour.isFactory)
  #set (filename = "{outputDir}/{listCreatorClass}.java")
  #generateFile(filename, fileContent())
